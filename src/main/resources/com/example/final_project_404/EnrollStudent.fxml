<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="550.0" minWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_404.EnrollStudentController">

    <children>
        <!-- Header -->
        <HBox fx:id="headerHBox" prefHeight="80.0" prefWidth="800.0" styleClass="header" stylesheets="@EmployeePortal.css">
            <children>
                <Label styleClass="header-title" text="Student Portal" />
                <Label styleClass="header-title" text=" --&gt; Course Registration" />
            </children>
        </HBox>

        <!-- Main Panel -->
        <AnchorPane layoutY="80.0" prefWidth="800.0" stylesheets="@comboBoxStyle.css">
            <children>
                <VBox fx:id="containerBarVBox" prefHeight="470.4" prefWidth="630.4" style="-fx-background-color: linear-gradient(from 100% 100% to 0% 0%, #00a1ffb1 0%, #ffffff 100%);" stylesheets="@EmployeePortal.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- ComboBox & Search -->
                    <HBox spacing="10">
                        <ComboBox fx:id="semesterComboBox" prefWidth="200.0" promptText="Choose Term" />
                        <Button onAction="#searchCourses" text="Search" />
                    </HBox>

                    <!-- Available Courses Table -->
                    <Label style="-fx-font-weight: bold;" text="Available Courses" />
                    <TableView fx:id="coursesTableView" prefHeight="150.0" prefWidth="590.0" stylesheets="@TableViewStyle.css">
                        <columns>
                            <TableColumn fx:id="selectCol" prefWidth="60.0" text="Choose" />
                            <TableColumn fx:id="courseCodeCol" prefWidth="100.0" text="Code">
                                <cellValueFactory>
                                    <PropertyValueFactory property="courseCode" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="courseNameCol" prefWidth="200.0" text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="courseName" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="creditsCol" prefWidth="70.0" text="Credits">
                                <cellValueFactory>
                                    <PropertyValueFactory property="credits" />
                                </cellValueFactory>
                            </TableColumn>
                            <!-- ستون جدید: Professor -->
                            <TableColumn fx:id="professorCol" prefWidth="150.0" text="Professor">
                                <cellValueFactory>
                                    <PropertyValueFactory property="professor" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <VBox.margin>
                            <Insets bottom="15.0" top="10.0" />
                        </VBox.margin>
                    </TableView>

                    <!-- Enrolled Courses Table -->
                    <Label style="-fx-font-weight: bold;" text="Your Courses" />
                    <TableView fx:id="enrolledCoursesTableView" prefHeight="150.0" prefWidth="590.0" stylesheets="@TableViewStyle.css">
                        <columns>
                            <TableColumn fx:id="dropCol" prefWidth="60.0" text="Delete" />
                            <TableColumn fx:id="enrolledCourseCodeCol" prefWidth="100.0" text="Code">
                                <cellValueFactory>
                                    <PropertyValueFactory property="courseCode" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="enrolledCourseNameCol" prefWidth="200.0" text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="courseName" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="enrolledCreditsCol" prefWidth="70.0" text="Credits">
                                <cellValueFactory>
                                    <PropertyValueFactory property="credits" />
                                </cellValueFactory>
                            </TableColumn>
                            <!-- ستون جدید: Professor -->
                            <TableColumn fx:id="enrolledProfessorCol" prefWidth="150.0" text="Professor">
                                <cellValueFactory>
                                    <PropertyValueFactory property="professor" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <VBox.margin>
                            <Insets bottom="15.0" top="10.0" />
                        </VBox.margin>
                    </TableView>

                    <!-- Register & Total -->
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                  <Button onAction="#goBack" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Back" />
                        <Label fx:id="totalCreditsLabel" style="-fx-font-weight: bold;" text="Total Credits: 0" />
                        <Button onAction="#registerCourses" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Submit" />
                    </HBox>

                    <!-- Message Label -->
                    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
