<AnchorPane maxWidth="800.0" minHeight="550.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_404.ProfessorPortalController">

    <children>
        <!-- ======= Header ======= -->
        <HBox fx:id="headerHBox" prefHeight="80.0" prefWidth="800.0" styleClass="header" stylesheets="@EmployeePortal.css">
            <children>
                <Label styleClass="header-title" text="Professor Portal" />
                <Label fx:id="headerTitle" styleClass="header-title" />
            </children>
        </HBox>
        <ScrollPane fx:id="buttonsScrollPane" layoutY="80.0" prefHeight="470.0" prefWidth="170.0" visible="false">
            <content>
                <VBox prefHeight="470.0" prefWidth="152.0" styleClass="nav-bar">
                    <children>
                        <Button layoutX="20.0" layoutY="20.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#dashboardScrollPane" styleClass="nav-button-dashboard" text="Dashboard" textAlignment="CENTER" />
                        <Button fx:id="gradeSubmissionScrollPane" layoutX="20.0" layoutY="85.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#gradeSubmissionScrollPane" styleClass="nav-button-dashboard" text="Grade&#10;Submission" textAlignment="CENTER" />
                        <Button fx:id="removeStudentScrollPane" layoutX="20.0" layoutY="150.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#removeStudentScrollPane" styleClass="nav-button-dashboard" text="Remove&#10;Student" textAlignment="CENTER" />
                        <Button fx:id="profileScrollPane" layoutX="20.0" layoutY="215.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#profileScrollPane" styleClass="nav-button-dashboard" text="Profile" />
                        <Button fx:id="reportsScrollPane" layoutX="20.0" layoutY="280.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#reportsScrollPane" styleClass="nav-button-dashboard" text="Reports" />
                        <Button layoutX="20.0" layoutY="345.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#signOutScrollPane" styleClass="nav-button-dashboard" text="Sign Out" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="12.5" right="12.5" top="10.0" />
                    </padding>
                </VBox>
            </content>
            <stylesheets>
                <URL value="@ScrollPaneStyle.css" />
                <URL value="@EmployeePortal.css" />
                <URL value="@DashboardButton.css" />
            </stylesheets>
        </ScrollPane>
        <AnchorPane fx:id="dashboardAnchorPane" layoutY="80.0">
            <children>
                <VBox prefHeight="470.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(from 100.0% 100.0% to 0.0% 0.0%, #00a1ffb1 0.0%, #ffffff 100.0%);">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <children>
                        <Label fx:id="dashboardTitle" maxWidth="Infinity" styleClass="label-title" text="Welcome Professor!!">
                            <VBox.margin>
                                <Insets bottom="20" />
                            </VBox.margin>
                        </Label>
                        <!-- ======= Menu Grid ======= -->
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" prefWidth="380.0" />
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" prefWidth="380.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints percentHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES" />
                                <RowConstraints percentHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES" />
                                <RowConstraints percentHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Button onAction="#gradeSubmissionDashboard" prefWidth="280.0" styleClass="button-dashboard" text="Grade Submission" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                <Button onAction="#removeStudentDashboard" prefWidth="280.0" styleClass="button-dashboard" text="Remove Student" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                <Button onAction="#profileDashboard" prefWidth="280.0" styleClass="button-dashboard" text="Profile" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                                <Button onAction="#reportsDashboard" prefWidth="280.0" styleClass="button-dashboard" text="Reports" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                                <Button onAction="#signOutDashboard" prefWidth="280.0" styleClass="button-dashboard" text="Sign out" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
            <stylesheets>
                <URL value="@EmployeePortal.css" />
                <URL value="@DashboardButton.css" />
            </stylesheets>
        </AnchorPane>
        <AnchorPane fx:id="gradeSubmissionAnchorPane" layoutX="170.0" layoutY="80.0" prefHeight="470.0" prefWidth="630.0" style="-fx-background-color: linear-gradient(from 100.0% 100.0% to 0.0% 0.0%, #00a1ffb1 0.0%, #ffffff 100.0%);" visible="false">
            <children>
                <VBox prefHeight="470.0" prefWidth="676.0" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    <children>
                        <!-- ======= Filters ======= -->
                        <HBox alignment="CENTER" spacing="10">
                            <ComboBox fx:id="semesterComboBoxGradeSubmission" prefHeight="35.0" prefWidth="220.0" promptText="Semester" />
                            <ComboBox fx:id="courseGroupComboBoxGradeSubmission" prefHeight="35.0" prefWidth="220.0" promptText="Course Group" />
                            <Button onAction="#loadStudentsGradeSubmission" prefHeight="32.0" prefWidth="115.0" text="Load Students" />
                        </HBox>
                        <!-- ======= Students Table ======= -->
                        <TableView fx:id="studentsTableGradeSubmission" editable="true" prefHeight="350.0">
                            <columns>
                                <TableColumn fx:id="studentNameColGradeSubmission" prefWidth="170.0" text="Student Name" />
                                <TableColumn fx:id="studentIdColGradeSubmission" prefWidth="120.0" text="Student ID" />
                                <TableColumn fx:id="scoreColGradeSubmission" editable="false" prefWidth="100.0" text="Score" />
                                <TableColumn fx:id="statusColGradeSubmission" prefWidth="100" text="Status" />
                                <TableColumn fx:id="editColGradeSubmission" prefWidth="100" text="Edit" />
                            </columns>
                        </TableView>
                        <!-- ======= Save Button ======= -->
                        <HBox alignment="CENTER_RIGHT">
                            <Label fx:id="errorLabelGradeSubmission" prefHeight="30.0" prefWidth="465.0" styleClass="error-label" textAlignment="LEFT" />
                            <Button onAction="#saveGradesGradeSubmission" prefHeight="32.0" prefWidth="115.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save Grades">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                </HBox.margin>
                            </Button>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <stylesheets>
                <URL value="@EmployeePortal.css" />
                <URL value="@ErrorAndSuccessfulLabel.css" />
                <URL value="@comboBoxStyle.css" />
                <URL value="@TableViewStyle.css" />
            </stylesheets>
        </AnchorPane>
        <AnchorPane fx:id="removeStudentAnchorPane" layoutX="170.0" layoutY="80.0" prefHeight="470.0" prefWidth="630.0" style="-fx-background-color: linear-gradient(from 100.0% 100.0% to 0.0% 0.0%, #00a1ffb1 0.0%, #ffffff 100.0%);" visible="false">
            <children>
                <VBox prefHeight="470.0" prefWidth="630.0" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    <children>
                        <!-- ======= Filters ======= -->
                        <HBox alignment="CENTER" spacing="10">
                            <ComboBox fx:id="semesterComboBoxRemoveStudent" prefHeight="35.0" prefWidth="220.0" promptText="Semester" />
                            <ComboBox fx:id="courseGroupComboBoxRemoveStudent" prefHeight="35.0" prefWidth="220.0" promptText="Course Group" />
                            <Button onAction="#loadStudentsRemoveStudent" prefHeight="32.0" prefWidth="115.0" text="Load Students" />
                        </HBox>
                        <!-- ======= Students Table ======= -->
                        <TableView fx:id="studentsTableRemoveStudent" editable="true" prefHeight="350.0">
                            <columns>
                                <TableColumn fx:id="studentNameColRemoveStudent" prefWidth="170.0" text="Student Name" />
                                <TableColumn fx:id="studentIdColRemoveStudent" prefWidth="120.0" text="Student ID" />
                                <TableColumn fx:id="dropColRemoveStudent" prefWidth="100" text="Action" />
                            </columns>
                        </TableView>
                        <!-- ======= Message Label ======= -->
                        <HBox alignment="CENTER_RIGHT">
                            <Label fx:id="messageLabelRemoveStudent" prefHeight="30.0" prefWidth="465.0" styleClass="error-label" textAlignment="LEFT" />
                        </HBox>
                    </children>
                </VBox>
            </children>
            <stylesheets>
                <URL value="@EmployeePortal.css" />
                <URL value="@ErrorAndSuccessfulLabel.css" />
                <URL value="@comboBoxStyle.css" />
                <URL value="@TableViewStyle.css" />
            </stylesheets>
        </AnchorPane>
        <AnchorPane fx:id="profileAnchorPane" layoutX="170.0" layoutY="80.0" prefHeight="470.0" prefWidth="630.0" style="-fx-background-color: linear-gradient(from 100.0% 100.0% to 0.0% 0.0%, #00a1ffb1 0.0%, #ffffff 100.0%);" visible="false">
            <children>
                <VBox prefHeight="470.0" prefWidth="630.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0" prefWidth="280.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0" prefWidth="220.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="First Name" />
                                <TextField fx:id="firstNameProfile" maxWidth="300.0" GridPane.columnIndex="1" />
                                <Label fx:id="errorLabelFirstNameProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="Last Name" GridPane.rowIndex="1" />
                                <TextField fx:id="lastNameProfile" maxWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="errorLabelLastNameProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="Date Of Birth" GridPane.rowIndex="2" />
                                <DatePicker fx:id="dateOfBirthProfile" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="errorLabelDateOfBirthProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="Gender" GridPane.rowIndex="3" />
                                <ComboBox fx:id="genderProfile" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label fx:id="errorLabelGenderProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="Phone Number" GridPane.rowIndex="4" />
                                <TextField fx:id="phoneNumberProfile" maxWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Label fx:id="errorLabelPhoneNumberProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
                                <Label prefHeight="20.0" prefWidth="100.0" style="-fx-text-fill: BLACK; -fx-font-weight: bold;" text="National ID" GridPane.rowIndex="5" />
                                <TextField fx:id="nationalIdProfile" maxWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label fx:id="errorLabelNationalIdProfile" prefWidth="200.0" styleClass="error-label" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
                            </children>
                        </GridPane>
                        <Group>
                            <children>
                                <Button mnemonicParsing="false" onAction="#changeProfile" text="Submit" />
                                <Label fx:id="errorLabelProfile" alignment="CENTER_RIGHT" prefWidth="495.0" styleClass="error-label" />
                                <Label fx:id="successLabelProfile" alignment="TOP_CENTER" prefWidth="495.0" styleClass="success-label" />
                            </children>
                            <VBox.margin>
                                <Insets top="40.0" />
                            </VBox.margin>
                        </Group>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
            <stylesheets>
                <URL value="@EmployeePortal.css" />
                <URL value="@ErrorAndSuccessfulLabel.css" />
            </stylesheets>
        </AnchorPane>
        <AnchorPane fx:id="reportsAnchorPane" layoutX="170.0" layoutY="80.0" prefHeight="470.0" prefWidth="630.0" style="-fx-background-color: linear-gradient(from 100.0% 100.0% to 0.0% 0.0%, #00a1ffb1 0.0%, #ffffff 100.0%);" visible="false">
            <children>
                <VBox prefHeight="470.0" prefWidth="630.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
            <stylesheets>
                <URL value="@EmployeePortal.css" />
                <URL value="@ErrorAndSuccessfulLabel.css" />
            </stylesheets>
        </AnchorPane>
    </children>
</AnchorPane>