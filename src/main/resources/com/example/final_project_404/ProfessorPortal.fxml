<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="550.0" minWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_404.ProfessorPortalController">
    <children>
        <HBox fx:id="headerHBox" prefHeight="80.0" prefWidth="800.0" styleClass="header" stylesheets="@EmployeePortal.css">
            <children>
                <Label styleClass="header-title" stylesheets="@EmployeePortal.css" text="Professor Portal" />
            </children>
        </HBox>
      <ScrollPane layoutY="80.0" prefHeight="470.0" prefWidth="170.0">
         <content>
              <VBox fx:id="navigationBarVBox" alignment="TOP_CENTER" layoutY="80.0" prefHeight="470.0" prefWidth="150.0" styleClass="nav-bar" stylesheets="@EmployeePortal.css">
                  <children>
                      <Button layoutX="20.0" layoutY="20.0" minHeight="55.0" minWidth="132.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="136.0" stylesheets="@EmployeePortal.css" text="Dashboard">
                          <styleClass>
                              <String fx:value="nav-button" />
                              <String fx:value="active" />
                          </styleClass>
                      </Button>
                      <Button layoutX="20.0" layoutY="150.0" minHeight="55.0" minWidth="132.0" mnemonicParsing="false" onAction="#profileProfessorPortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Profile" />
                      <Button layoutX="20.0" layoutY="193.0" minHeight="55.0" minWidth="132.0" mnemonicParsing="false" onAction="#reportsProfessorPortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Reports" />
                      <Button layoutX="20.0" layoutY="193.0" minHeight="55.0" minWidth="132.0" mnemonicParsing="false" onAction="#signOutProfessorPortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Sign out" />
                  </children>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </VBox>
         </content>
      </ScrollPane>
        <VBox fx:id="containerBarVBox" layoutX="170.0" layoutY="80.0" prefHeight="470.0" prefWidth="630.0" stylesheets="@EmployeePortal.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
