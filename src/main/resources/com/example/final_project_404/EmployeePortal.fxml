            <Label styleClass="header-title" stylesheets="@EmployeePortal.css" text="Employee Portal" />
         </children>
      </HBox>
      <ScrollPane layoutY="80.0" prefHeight="470.0" prefWidth="170.0">
         <content>
            <VBox fx:id="navigationBarVBox" prefHeight="420.0" prefWidth="150.0" styleClass="nav-bar" stylesheets="@EmployeePortal.css">
               <children>
                  <Button layoutX="20.0" layoutY="20.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" stylesheets="@EmployeePortal.css" text="Dashboard">
                     <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="active" />
                     </styleClass>
                  </Button>
                  <Button minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#addDegreeEmployeePortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Add Degree" />
                  <Button layoutX="20.0" layoutY="86.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#addCourseEmployeePortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Add Course" />
                  <Button layoutX="20.0" layoutY="62.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#professorEmployeePortal" styleClass="nav-button" stylesheets="@EmployeePortal.css" text="Professors" />
