<AnchorPane minHeight="550.0" minWidth="800.0" style="-fx-background-color: #f4f6f9;" stylesheets="@EmployeePortal.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_404.EmployeePortalController">
   <children>
      <HBox fx:id="headerHBox" prefHeight="80.0" prefWidth="800.0" styleClass="header" stylesheets="@EmployeePortal.css">
